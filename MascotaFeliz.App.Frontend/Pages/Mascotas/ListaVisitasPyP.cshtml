@page
@model MascotaFeliz.App.Frontend.Pages.ListaVisitasPyPModel
@{
}

<h1>Listado VisitasPyP </h1>
<table class="tabla"style="padding: 2px 3px ;
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
    border-radius: 7px;">
     <tr>
            
            <th>Fecha Visita</th>
            <th>Temperatura</th>
            <th>Peso</th>
            <th>Frecuencia Respiratoria</th>
            <th>Frecuencia Cardiaca</th>
            <th>Estado de Animo</th>
            <th>IdVeterinario</th>
            <th>Recomendaciones</th>
                           
        </tr>
    @foreach (var visitasPyP in Model.listaVisitasPyP)
    {
       
          <tr>
            <td>@visitasPyP.FechaVisita</td>
            <td>@visitasPyP.Temperatura</td>
            <td>@visitasPyP.Peso</td>
            <td>@visitasPyP.FrecuenciaRespiratoria</td>
            <td>@visitasPyP.FrecuenciaCardiaca</td>
            <td>@visitasPyP.EstadoAnimo</td>
            <td>@visitasPyP.IdVeterinario</td>
            <td>@visitasPyP.Recomendaciones</td>
            
            
        
      <td> <a class="btn btn-primary table-btn" asp-page="./DetallesVisitasPyP" asp-route-duenoId="@visitasPyP.Id">
                    Detalle 
                </a>
            </td>  
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarVisitasPyP" asp-route-duenoId="@visitasPyP.Id">
                    Editar 
                </a>
            </td>
        </tr> 
    }
   

</table>
<a class = "btn btn-primary table-btn" asp-page="./EditarVisitasPyP" class="btn-default">Adicionar VisitasPyP</a>